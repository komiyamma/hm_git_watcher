<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>入力ダイアログの例</title>
</head>
<body>
  <button onclick="showInputDialog()">ダイアログを表示</button>
  <div id="result"></div>

  <script>
    function showInputDialog() {
      let userName = prompt("あなたの名前を入力してください:", "名無し");
      let resultDiv = document.getElementById("result");

      if (userName != null && userName != "") {
        resultDiv.textContent = "こんにちは、" + userName + "さん！";
      } else {
        resultDiv.textContent = "入力がキャンセルされました。";
      }
    }
  </script>
</body>
</html>